@using Umbraco.Core.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.Models.RenderModel>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.UrlPrefix = string.Empty;
    IPublishedContent treatmentsData = null;
    var treatmentsNode = Model.Content.Descendants("TreatmentsPageContent");
}
<style>
    #photo-content {
        margin-top: 30px;
    }
</style>
@if (treatmentsNode.Any())
{
    treatmentsData = treatmentsNode.First();
    IPublishedContent highlights = null;
    var highlightsNodes = Model.Content.Descendants("TreatmentCategory");
    if (highlightsNodes.Any())
    {
        @Html.Partial("_HighlightsPartial", highlights);
    }

    <div id="photo-content" class="vc_row-fluid beautify">
        @treatmentsData.GetPropertyValue("treatmentsTextEditor")
    </div>
}
