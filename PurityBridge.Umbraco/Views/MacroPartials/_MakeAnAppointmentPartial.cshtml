<section class="widget widget-appointment">
    <div class="widget-title">Make an Appointment</div>
    <form action="#">
        <div class="row">
            <input type="text" placeholder="Full Name" id="appointment-full-name">
            <i class="fa fa-user"></i>
        </div>
        <div class="row">
            <input type="tel" placeholder="Phone Number" id="appointment-phone">
            <i class="fa fa-phone"></i>
        </div>
        <div class="row">
            <input type="email" placeholder="Email Address" id="appointment-email">
            <i class="fa fa-envelope"></i>
        </div>
        @* <div class="row">
                <section class="widget widget-calendar">
                    <input id="calendar" type="text" placeholder="Appointment Date">
                    <i class="fa fa-calendar"></i>
                </section>
            </div>*@
        <div class="row">
            <textarea cols="30" rows="5" placeholder="Message" id="appointment-message"></textarea>
            <i class="fa fa-align-left"></i>
        </div>
        <button class="button button-primary" onclick="sendAppointmentEmail(); return false;">Send Message</button>
    </form>
</section>
