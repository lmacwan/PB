@inherits Umbraco.Web.Mvc.UmbracoViewPage<IPublishedContent>

<!-- page title -->
@if (!(Model.Name.ToString().Equals("home", StringComparison.InvariantCultureIgnoreCase)))
{
    <section class="page-title">
        <div class="grid-row clearfix">
            <h1>@Model.Ancestor(2).Name</h1>
            <nav class="bread-crumbs">
                @RenderBreadCrumbs()
            </nav>
        </div>
    </section>
}
<!--/ page title -->

@helper RenderBreadCrumbs()
{
    if ((bool)ViewBag.ShowTitleBar)
    {
        var currentModel = Model.Ancestors().Where(a => a.Level > 1).OrderByDescending(a => a.Level);
        foreach (IPublishedContent ancestror in currentModel)
        {
    <a href="@ancestror.Url()">@ancestror.Name</a>
    <span>&nbsp;</span>
    <i class="fa fa-angle-right"></i><span>&nbsp;</span>
        }
        var value = Model.Name.Equals("details", StringComparison.CurrentCultureIgnoreCase)
                    ? "Treatments"
                    : Model.Name;
    @value <span> &nbsp; &nbsp;</span>
    }
}