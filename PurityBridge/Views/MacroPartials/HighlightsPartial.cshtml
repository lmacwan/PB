@inherits Umbraco.Web.Macros.PartialViewMacroPage

	@if (CurrentPage.Children.Where("Visible").Any())
	{
		<div class="grid-row">
		<!-- benefits -->
			<section class="benefits">
				<ul>
				@* For each child page under the root node, where the property umbracoNaviHide is not True *@
				@foreach (var childPage in CurrentPage.Children.Where("Visible"))
				{
					<li>
						<div class="pic"><i class="fa fa-@childPage.icon"></i></div>
                    	<div class="text">
							<h2>@childPage.heading</h2>
							<p>@childPage.description</p>
							<a href="@childPage.link" class="more"></a>
                    	</div>
					</li>
				}
				</ul>
			</section>
		</div>
	}